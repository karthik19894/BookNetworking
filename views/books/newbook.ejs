<% include ../partials/header %>

    <h1 style="text-align:center;"> Add a New Book to the Global Catalogue</h1>
    <div class="row">
        <div style="width:30%; margin:30px auto;">
            <form action='/books' method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[title]" placeholder="Title of the Book">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[isbn]" placeholder="Enter the ISBN">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[author]" placeholder="Name of the Author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="book[description]" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>





<% include ../partials/footer %>